
// Basic page style

$max-content-width = 1200px

html
  height: 100%

body
  height: 100%
  width: 100%
  margin: 0

  overflow-y: scroll
  scrollbar-width: none
  -ms-overflow-style: none

  &::-webkit-scrollbar
    height: 0
    width: 0

  & > input
    display: none

a, a:visited
  color: inherit


// Language toggles

.en, .fr, .ko
  display: none

#language-en:checked ~ main .en, #language-fr:checked ~ main .fr, #language-ko:checked ~ main .ko
  display: unset


// Theme toggle

#change-theme ~ main
  --background: white
  --secondary-background: #f9f9f9
  --primary: #252525
  --secondary: #252525
  --ternary: #d0d0d0

  .light
    display: unset
  .dark
    display: none

  .name
    --accent: #f03e3e
  .me
    --accent: #fcc419
  .skills
    --accent: #4c6ef5
  .speak
    --accent: #51cf66

#change-theme:checked ~ main
  --background: black
  --secondary-background: #0a0a0a
  --primary: white
  --secondary: white
  --ternary: #616161

  .light
    display: none
  .dark
    display: unset

  .name
    --accent: #e03131
  .me
    --accent: #ffd43b
  .skills
    --accent: #339af0
  .speak
    --accent: #69db7c


// Page style

main
  min-height: 100%
  width: 100%

  display: flex
  flex-direction: column

  background: var(--background)

  & > *
    width: 100%
    max-width: $max-content-width

    margin-left: auto
    margin-right: auto

h3
  font-family: 'Red Hat Display', 'Noto Sans KR', Roboto, Arial, sans-serif
  font-size: 2.6em
  letter-spacing: 0.012em
  line-height: 1.25em
  margin-left: 20px
  margin-right: auto
  z-index: 1

  em
    font-style: normal

  em, label
    color: var(--accent)!important

  a
    text-decoration: underline var(--accent)

main
  overflow: hidden

header
  height: 100vh
  position: relative

  align-items: center
  display: flex
  justify-content: center

  color: var(--primary)

  label
    cursor: pointer

  #bg-icon
    position: absolute
    fill: none
    stroke: var(--primary)
    stroke-width: 1px
    opacity: .12
    width: 100vmax
    height: auto
    margin-right: -50vw

  #icon
    align-self: start
    fill: var(--primary)
    height: 36px
    margin-top: 1em
    position: absolute
    stroke-width: 0
    width: @height

  #lines
    position: absolute
    height: 400px
    width: 100%
    overflow: overlay
    pointer-events: none
    z-index: 0

  #intro
    display: inline-block
    max-width: 800px

  ul
    list-style: none
    padding: 0

    font-weight: lighter

    li
      display: inline-block
      margin-right: 1em

      .text
        margin-bottom: -.2em

      .links
        color: var(--ternary)

    svg
      height: inherit
      width: inherit

      margin-bottom: var(--mt)

    path
      fill: var(--secondary)
      stroke: none
